<?xml version="1.0"?>

<precice-configuration>

  <log>
     <sink filter= "%Severity% > debug" format="---[precice] %ColorizedSeverity% %Message%" enabled="true" />
   </log>

  <solver-interface dimensions="2">

    <data:scalar name="heightS1"/>
    <data:scalar name="huS1"/>
    <data:scalar name="hvS1"/>
    <data:scalar name="heightS2"/>
    <data:scalar name="huS2"/>
    <data:scalar name="hvS2"/>

    <mesh name="Solver1_Nodes">
      <use-data name="heightS1"/>
      <use-data name="huS1"/>
      <use-data name="hvS1"/>
      <use-data name="heightS2"/>
      <use-data name="huS2"/>
      <use-data name="hvS2"/>
    </mesh>

    <mesh name="Solver2_Nodes">
      <use-data name="heightS1"/>
      <use-data name="huS1"/>
      <use-data name="hvS1"/>
      <use-data name="heightS2"/>
      <use-data name="huS2"/>
      <use-data name="hvS2"/>
    </mesh>

    <participant name="Solver1">
      <!-- Makes the named mesh available to the participant. Mesh is provided by the solver directly. -->
      <use-mesh name="Solver1_Nodes" provide="yes"/>
      <use-mesh name="Solver2_Nodes" from="Solver2"/>
      <write-data name="heightS1" mesh="Solver1_Nodes"/>
      <write-data name="huS1" mesh="Solver1_Nodes"/>
      <write-data name="hvS1" mesh="Solver1_Nodes"/>
      <read-data name="heightS2" mesh="Solver1_Nodes"/>
      <read-data name="huS2" mesh="Solver1_Nodes"/>
      <read-data name="hvS2" mesh="Solver1_Nodes"/>
      <!-- Define input/output of the solver.  -->
      <mapping:nearest-neighbor direction="read" from="Solver2_Nodes" to="Solver1_Nodes" constraint="consistent" timing="initial"/>
    </participant>

    <participant name="Solver2">
      <use-mesh name="Solver2_Nodes" provide="yes"/>
      <use-mesh name="Solver1_Nodes" from="Solver1"/>
      <write-data  name="heightS2" mesh="Solver2_Nodes"/>
      <write-data  name="huS2" mesh="Solver2_Nodes"/>
      <write-data  name="hvS2" mesh="Solver2_Nodes"/>
      <read-data  name="heightS1" mesh="Solver2_Nodes"/>
      <read-data  name="huS1" mesh="Solver2_Nodes"/>
      <read-data  name="hvS1" mesh="Solver2_Nodes"/>
      <mapping:nearest-neighbor direction="read" from="Solver1_Nodes" to="Solver2_Nodes" constraint="consistent" timing="initial"/>
    </participant>

    <m2n:sockets from="Solver1" to="Solver2" network="lo"/>

    <coupling-scheme:serial-explicit>
    <!-- <coupling-scheme:serial-implicit> -->
        <participants first="Solver1" second="Solver2"/>
        <time-window-size value="2"/>
        <max-time value="20.0"/>
        <!-- <max-iterations value="40"/> -->
        <exchange data="heightS1" mesh="Solver1_Nodes" from="Solver1" to="Solver2"/>
        <exchange data="huS1" mesh="Solver1_Nodes" from="Solver1" to="Solver2"/>
        <exchange data="hvS1" mesh="Solver1_Nodes" from="Solver1" to="Solver2"/>
        <!-- <exchange data="heightS1" mesh="Solver1_Nodes" from="Solver1" to="Solver2" initialize="true"/>
        <exchange data="huS1" mesh="Solver1_Nodes" from="Solver1" to="Solver2" initialize="true"/>
        <exchange data="hvS1" mesh="Solver1_Nodes" from="Solver1" to="Solver2" initialize="true"/> -->

        <!-- <exchange data="heightS2" mesh="Solver2_Nodes" from="Solver2" to="Solver1" />
        <exchange data="huS2" mesh="Solver2_Nodes" from="Solver2" to="Solver1" />
        <exchange data="hvS2" mesh="Solver2_Nodes" from="Solver2" to="Solver1" /> -->
        <exchange data="heightS2" mesh="Solver2_Nodes" from="Solver2" to="Solver1" initialize="true"/>
        <exchange data="huS2" mesh="Solver2_Nodes" from="Solver2" to="Solver1" initialize="true"/>
        <exchange data="hvS2" mesh="Solver2_Nodes" from="Solver2" to="Solver1" initialize="true"/>
        <!-- <relative-convergence-measure data="heightS1"        mesh="Solver1_Nodes" limit="1e-5"/>
        <relative-convergence-measure data="huS1"        mesh="Solver1_Nodes" limit="1e-5"/>
        <relative-convergence-measure data="hvS1"        mesh="Solver1_Nodes" limit="1e-5"/>
        <relative-convergence-measure data="heightS2" mesh="Solver2_Nodes" limit="1e-5"/>
        <relative-convergence-measure data="huS2"        mesh="Solver2_Nodes" limit="1e-5"/>
        <relative-convergence-measure data="hvS2"        mesh="Solver2_Nodes" limit="1e-5"/>
        <extrapolation-order value="2"/> -->
      <!-- </coupling-scheme:serial-implicit> -->
    </coupling-scheme:serial-explicit>

  </solver-interface>
</precice-configuration>
